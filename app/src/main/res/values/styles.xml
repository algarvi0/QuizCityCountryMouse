<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/material_deep_orange_500</item>
        <item name="colorPrimaryDark">@color/material_deep_orange_700</item>
        <item name="colorAccent">@color/material_deep_orange_accent_200</item>
    </style>

    <style name="QuestionsStyle">
        <!-- <item name="android:layout_marginLeft">@dimen/default_margin</item>
       <item name="android:layout_marginRight">@dimen/default_margin</item>-->
       <item name="android:layout_marginBottom">@dimen/default_margin</item>
       <item name="android:paddingTop">@dimen/default_padding</item>
       <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
       <item name="android:background">@color/material_deep_orange_500</item>
       <item name="android:textColor">@android:color/black</item>
       <item name="android:textSize">@dimen/text_size</item>
       <item name="android:gravity">start</item>
   </style>

   <style name="AnswersStyle">
       <item name="android:textColor">@android:color/white</item>
       <item name="android:textSize">@dimen/AnswerFontSize</item>
       <item name="android:layout_marginLeft">@dimen/default_margin</item>
       <item name="android:paddingBottom">@dimen/default_padding</item>
   </style>

    <style name="EditTextStyle">
        <item name="android:textSize">@dimen/EditTextSize</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
    </style>

    <style name="CheckBoxStyle">
        <item name="android:textSize">@dimen/EditTextSize</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:layout_marginRight">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
    </style>





</resources>
